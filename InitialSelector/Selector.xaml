<Window x:Class="Selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialSelector"
        mc:Ignorable="d"
        Title="Language Selection" Height="162" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFCCDFF1" Offset="0"/>
            <GradientStop Color="#FF766C6C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Image Name="imgVB" HorizontalAlignment="Left" Height="101" Margin="10,10,0,0" VerticalAlignment="Top" Width="101" Source="Resources/vb.png" Stretch="UniformToFill">

        </Image>
        <Image Name="imgCSharp" HorizontalAlignment="Left" Height="101" Margin="171,10,0,0" VerticalAlignment="Top" Width="97" Source="Resources/c.png" Stretch="UniformToFill"/>

    </Grid>
</Window>
